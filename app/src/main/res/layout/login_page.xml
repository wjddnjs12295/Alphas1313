<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/login_image"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="56dp"
        android:layout_marginRight="24dp"
        android:adjustViewBounds="true"
        android:src="@drawable/login_image"></ImageView>

    <RelativeLayout
        android:id="@+id/emailpassword"
        android:layout_below="@+id/login_image"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/login_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/darkgray"
            android:drawableLeft="@drawable/loginemail_left"
            android:drawablePadding="10dp"
            android:hint="이메일 주소"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="@color/darkgray"></EditText>

        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/login_email"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/darkgray"
            android:drawableStart="@drawable/loginpassword_left"
            android:drawablePadding="10dp"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="@color/darkgray"></EditText>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/emailpassword"
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/round_button1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/nanumsquare_b"
            android:gravity="center"
            android:text="로그인"
            android:textColor="@color/white"
            android:textSize="16dp"></TextView>
    </RelativeLayout>


    <LinearLayout
        android:layout_below="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:text="비밀번호 찾기"
            android:textColor="@color/black"
            android:textSize="16dp" />
        <View
            android:layout_width="1dp"
            android:background="@color/linegray"
            android:layout_height="match_parent">
        </View>

        <TextView
            android:id="@+id/signupin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:text="회원가입"
            android:textColor="@color/black"
            android:textSize="16dp" />
    </LinearLayout>


</RelativeLayout>